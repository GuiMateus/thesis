<?xml version="1.0"?>

<launch>


  <include file="$(find tf_virtual)/launch/ar_alvar.launch"/>

  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg     if="$(arg debug)" name="launch_prefix" value="gdb --ex run --args" />


  <include file="$(find easy_handeye)/launch/calibrate.launch">
    <arg name="namespace_prefix" default="LBR_calibration" doc="The name of the calibration prefix" />
    <arg name="eye_on_hand" value="true" doc="If true eye_on_hand calibrating is begin performed. if false eye_on_base calibration will be performed"/>

    <arg name="robot_base_frame" value="iiwa_link_0" doc="Frame of the base link of the robot"/>
    <arg name="robot_effector_frame" value="iiwa_link_ee" doc="Frame of the end-end_effector link"/>
    <arg name="tracking_base_frame" value="camera_link" doc="Frame of the tracking camera which is normaly the camera _link"/>
    <arg name="tracking_marker_frame" value="ar_marker_1" doc="Frame of the AR maker you want to track normaly use ar_maker_(ID of marker)"/>
    <arg name="move_group" value="right_arm" doc="the name of move_group for the automatic robot motion with MoveIt!" />
    <arg name="start_rviz" value="false" doc="if true rviz will open (This not needed when the robot is running since it oppend rviz)" />
    <arg name="freehand_robot_movement" default="true" doc="free hand calibrate or automatic move calibration(free hand is more presice)" />

  </include>
</launch>
